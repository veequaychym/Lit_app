-# This file is app/view/movies/index
%h2 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
      %th Edit
      %th Delete
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
        %td= link_to "Edit Movie", edit_movie_path(movie)
        %td= link_to "Delete", movie_path(movie), :method => :delete

= link_to 'Add new movie', new_movie_path
= link_to 'Create new field', new_field_path
      
